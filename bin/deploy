#!/usr/bin/env bash

now() {
  date "+$PROJECT_DATEFMT"
}

info() {
  echo "$(now) $@"
}

info "Project: $PROJECT_NAME. Starting to deploy"

(cd server &&
  x expo &&
  cd -) >/dev/null 2>&1
info "Exported unittests"

(cd client &&
  npx vite build &&
  rsync --verbose -r dist/* jino:~/hosts/js &&
  cd -) >/dev/null 2>&1
info "Built and deployed"
